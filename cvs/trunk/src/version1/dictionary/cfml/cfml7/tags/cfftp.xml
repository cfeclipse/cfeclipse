		transferMode = "mode"
		failIfExists = "boolean"
		directory = "directory name"
		localFile = "filename"
		remoteFile = "filename"
		item = "directory or file"
		existing = "file or directory name"
		new = "file or directory name"
		proxyServer = "proxy server"
